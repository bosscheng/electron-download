{
  "name": "download",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "package:win": "electron-packager ./",
    "package:mac": "electron-packager ./ --platform=darwin --arch=x64 --icon=app.icns --out=./dist --asar --app-version=1.0.0"
  },
  "build": {
    "appId": "Download",
    "files": [
      "package.json",
      "ffmpeg/**/*",
      "main.js",
      "index.html",
      "icon.png"
    ],
    "mac": {
      "category": "tools",
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0",
    "electron-packager": "^13.1.1"
  }
}
