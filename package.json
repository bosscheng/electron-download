{
  "name": "electron-download",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "package:win": "yarn build && rm -rf release && electron-builder build --win --x64",
    "package:mac": "yarn build && rm -rf release && electron-builder build --mac",
    "release:win": "yarn build && electron-builder build --win -p always",
    "release:mac": "yarn build && electron-builder build --mac -p always"
  },
  "dependencies": {
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0"
  }
}
