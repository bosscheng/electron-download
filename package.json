{
  "name": "download",
  "version": "1.0.0",
  "main": "main.js",
  "description": "electron download by ffmpeg",
  "scripts": {
    "dev": "electron .",
    "package": "electron-packager ./"
  },
  "build": {
    "appId": "Download",
    "files": [
      "package.json",
      "ffmpeg/**/*",
      "main.js",
      "index.html",
      "icon.png"
    ],
    "mac": {
      "category": "tools",
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^15.5.5",
    "electron-builder": "^20.43.0",
    "electron-packager": "^13.1.1"
  }
}
